# Contract AI - Chat v2 Environment Variables Template

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/contractai
# Optional: MongoDB Atlas Vector Search (for production RAG)
MONGODB_ATLAS_SEARCH_INDEX_NAME=contract_embeddings

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# OpenAI API (Primary AI Provider)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Additional AI Providers for Chat v2
ANTHROPIC_API_KEY=your-anthropic-api-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
S3_BUCKET_NAME=your-s3-bucket-name

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Chat v2 Feature Configuration
CHAT_V2_ENABLED=false
RAG_SEARCH_MODE=lite
# Options: 'mongodb' for Atlas Vector Search, 'lite' for local search
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=250
RAG_MAX_RESULTS=10

# Embeddings Configuration
EMBEDDINGS_PROVIDER=openai
# Options: 'openai', 'anthropic', 'huggingface'
EMBEDDINGS_MODEL=text-embedding-3-small
# OpenAI: text-embedding-3-small, text-embedding-3-large
# HuggingFace: sentence-transformers/all-MiniLM-L6-v2

# Chat v2 Performance Tuning
RAG_SIMILARITY_THRESHOLD=0.7
CHAT_RESPONSE_TIMEOUT=60000
MAX_CONCURRENT_CHATS=10
TOOL_EXECUTION_TIMEOUT=30000

# Development & Debugging
NODE_ENV=development
DEBUG_RAG=false
DEBUG_TOOLS=false
DEBUG_SSE=false

# Optional: Telemetry & Analytics
TELEMETRY_ENDPOINT=
ANALYTICS_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security & GDPR
PII_DETECTION_ENABLED=true
PII_MASKING_ENABLED=false
# Set to true in production for GDPR compliance

# Advanced RAG Configuration
# MongoDB Atlas Search Configuration (Production Only)
ATLAS_PROJECT_ID=
ATLAS_CLUSTER_NAME=
ATLAS_DATABASE_NAME=contractai
ATLAS_COLLECTION_NAME=contract_chunks

# Vector Search Tuning
VECTOR_SEARCH_K=10
HYBRID_SEARCH_WEIGHT=0.5
RERANK_ENABLED=false

CHAT_V2=true
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_MODEL=text-embedding-3-large
VECTOR_SEARCH=mongodb